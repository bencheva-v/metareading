extends auth

block auth
  form.signup.form-horizontal(action="/users", method="post")
    .control-group
      label.control-label(for='FirstName') First name
      .controls
        input#name(type='text', name="FirstName", placeholder='First name')

    .control-group
      label.control-label(for='LastName') Last name
      .controls
        input#name(type='text', name="LastName", placeholder='Last name')

    .control-group
      label.control-label(for='email') Email
      .controls
        input#email(type='text', name="Email", placeholder='Email', required=true)

    .control-group
      label.control-label(for='username') Username
      .controls
        input#username(type='text', name="username", placeholder='Username', required=true)

    .control-group
      label.control-label(for='password') Password
      .controls
        input#password(type='password', name="password", placeholder='Password', required=true)

    .form-actions
      button.btn.btn-primary(type='submit') Sign up
      &nbsp;
      | or&nbsp;
      a.show-login(href="/signin") login
